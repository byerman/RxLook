<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_subscribe"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:text="subscribe"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_subscribeOn"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/btn_subscribe"
        android:text="subscribeOn/observeOn"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_delay"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/btn_subscribe"
        android:text="delay"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_do"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/btn_subscribe"
        android:layout_toRightOf="@id/btn_delay"
        android:text="do"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_onErrorReturn"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/btn_subscribe"
        android:layout_toRightOf="@id/btn_do"
        android:text="onErrorReturn"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_onErrorResumeNext"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/btn_delay"
        android:text="onErrorResumeNext"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/btn_delay"
        android:layout_toRightOf="@id/btn_onErrorResumeNext"
        android:text="retry"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_onExceptionResumeNext"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/btn_onErrorResumeNext"
        android:text="onExceptionResumeNext"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_retryUntil"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/btn_onErrorResumeNext"
        android:layout_toRightOf="@id/btn_onExceptionResumeNext"
        android:text="retryUntil"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_retryWhen"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/btn_onExceptionResumeNext"
        android:text="retryWhen"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_repeat"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/btn_onExceptionResumeNext"
        android:layout_toRightOf="@id/btn_retryWhen"
        android:text="repeat"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <Button
        android:id="@+id/btn_repeatWhen"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/btn_onExceptionResumeNext"
        android:layout_toRightOf="@id/btn_repeat"
        android:text="repeatWhen"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/circle_button_red"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_retryWhen"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="19sp" />

    </ScrollView>

</RelativeLayout>