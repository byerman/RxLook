<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlyt_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <include    android:id="@+id/title_show"
            layout="@layout/layout_title2"/>

        <Button
            android:id="@+id/btn_create"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_show"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="12dp"
            android:text="create"
            android:textColor="#ffffff"
            android:background="@drawable/circle_button_red" />

        <Button
            android:id="@+id/btn_just"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/btn_create"
            android:layout_below="@id/title_show"
            android:text="just"
            android:textColor="#ffffff"
            android:background="@drawable/circle_button_red" />

        <Button
            android:id="@+id/btn_fromArray"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/btn_just"
            android:layout_below="@id/title_show"
            android:text="fromArray"
            android:textColor="#ffffff"
            android:background="@drawable/circle_button_red" />

        <Button
            android:id="@+id/btn_fromIterable"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/btn_create"
            android:text="fromIterable"
            android:textColor="#ffffff"
            android:background="@drawable/circle_button_red" />

        <Button
            android:id="@+id/btn_defer"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/btn_create"
            android:layout_toRightOf="@id/btn_fromIterable"
            android:text="defer"
            android:textColor="#ffffff"
            android:background="@drawable/circle_button_red" />

        <Button
            android:id="@+id/btn_timer"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/btn_create"
            android:layout_toRightOf="@id/btn_defer"
            android:text="timer"
            android:textColor="#ffffff"
            android:background="@drawable/circle_button_red" />

        <Button
            android:id="@+id/btn_interval"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/btn_fromIterable"
            android:text="interval"
            android:textColor="#ffffff"
            android:background="@drawable/circle_button_red" />

        <Button
            android:id="@+id/btn_intervalRange"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/btn_fromIterable"
            android:layout_toRightOf="@id/btn_interval"
            android:text="intervalRange"
            android:textColor="#ffffff"
            android:background="@drawable/circle_button_red" />

        <Button
            android:id="@+id/btn_range"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/btn_fromIterable"
            android:layout_toRightOf="@id/btn_intervalRange"
            android:text="range"
            android:textColor="#ffffff"
            android:background="@drawable/circle_button_red" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_interval"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/tv_log"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="19sp" />

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlyt_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone">

        <include    android:id="@+id/title_code"
            layout="@layout/layout_title"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_code"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textColor="#ffffff" />

        </ScrollView>



    </RelativeLayout>

</RelativeLayout>